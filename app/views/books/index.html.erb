<body>
<p id="notice"></p>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book %></td>
		<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
		<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>
	</tbody>
</table>


<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

	<label>Title</label>
	<%= f.text_field:title %>
	<label>Body</label>
	<%= f.text_area:body %><br>

	<%= f.submit 'Create Book' %>
<% end %>
